<body ng-app="fitting_room" >

        <div id="FittingRoomCtrl" ng-controller="FittingRoomCtrl">
        	<div style="width: 400px; height: 500px">
        		
	        	<div id="biggerImage" style="float: left; width: 100%; height: 60%; margin: 4px"> 
	        		<img ng-src="assets/images/{{clicked_photo}}" style="max-height:100%; max-width:100%; -webkit-transform: rotate(90deg);" >
	        	</div>	
	        	
	        	<div style="width: 100%; height: 40%; float: left">		
		        	<div class="row" >
		        		<div ng-repeat="item in items">
						  <div class="col-xs-6 col-md-3"  ng-click="clicked(item)" >
						    <div class="thumbnail" >	
						      <img src="assets/images/camera.png" ng-src="assets/images/{{item}}" style="-webkit-transform: rotate(90deg);">
						    </div>
						  </div>
						</div>  
		        	</div>
		        </div>	
	     </div>   
</body>        	